<!-- ./views/index.handlebars -->
<body class="partial-body">

  <a href="/users/account">
    <div class="user-container" style="background-color:rgb(255, 254, 254,0.4) ;">
      <i class="user fa-solid fa-user" style="color:rgb(0, 0, 0, 0.7);"></i>
    </div>
  </a>


  <div class="search-and-sort">
    <!-- search bar -->
    <div class="container-search search-bar">
      <div class="search-bar-outer rounded-pill">
        <div class="search-bar-inner">
          <form action="/search">
            <div class="input-group">
              <h5 class="mt-2">尋找餐廳：</h5>
              <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    {{!-- sort --}}
    <div class="dropdown sort">
      <button class="btn btn-danger btn-lg dropdown-toggle" type="button" id="dropdownMenuButton1"
        data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-arrow-up-z-a"></i>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="/asc">A->Z(Positive order)</a></li>
        <li>
          <hr class="dropdown-divider">
        </li>
        <li><a class="dropdown-item" href="/desc">Z->A(Reverse order)</a></li>
        <li>
          <hr class="dropdown-divider">
        </li>
        <li><a class="dropdown-item" href="/category">category</a></li>
        <li>
          <hr class="dropdown-divider">
        </li>
        <li><a class="dropdown-item" href="/location">location</a></li>
      </ul>
    </div>

  </div>


  <!-- restaurant list -->
  <div class="container-restaurant mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="card-columns">
          {{#each restaurants}}
          <a href="./restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="d-flex flex-row-reverse bd-highlight">
                <div class="p-2 bd-highlight">
                  <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                    <div class="btn-group btn-group-sm" role="group" aria-label="...">
                      <button type="submit" class="btn btn-danger">delete</button>
                    </div>
                  </form>
                </div>
                <div class="p-2 bd-highlight"><a href="./restaurants/{{ this._id }}">detail</a></div>
                <div class="p-2 bd-highlight"><a href="./restaurants/{{ this._id }}/edit">edit</a></div>
              </div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</body>